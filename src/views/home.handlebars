<title>Lista de Productos</title>

<body>
  <h1>Lista de Productos</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripci√≥n</th>
        <th>Precio</th>
        <th>Stock</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
          <td>{{this.stock}}</td>
          <td><img
              src={{this.thumbnail}}
              class="img-thumbnail"
              alt="thumbnail"
            /></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <button class="btn btn-primary" onclick="{goProducts()}">Go realTimeProducts</button>

</body>
<script>
  function goProducts() { window.location.href = '/realTimeProducts'; }
</script>